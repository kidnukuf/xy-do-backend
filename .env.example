# XY-DO Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/xy-do?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRE=30d

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://4ac00b04.xy-do.pages.dev

# Email Service (Choose one)
# Option 1: Resend (Recommended for production)
RESEND_API_KEY=re_your_api_key_here

# Option 2: Gmail (Development only)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Secret
SESSION_SECRET=your-session-secret-key
